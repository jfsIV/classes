% ------- Problem title
set title "SFR Unit Pincell"

% ------- Cross section data library file path
set acelib "/usr/local/usrapps/rdfmg/serpent/lib/xs/s2v0_endfb71.xsdata"  % ACE library for cross-sections
set declib "/usr/local/usrapps/rdfmg/serpent/lib/decay/s2v0_endfb71.dec"  % Library for decay
set nfylib "/usr/local/usrapps/rdfmg/serpent/lib/decay/s2v0_endfb71.nfy"  % Neutron fission yield library

% ------- Boundary Conditions
set bc reflective reflective reflective

% For plotting, to see the fuel compact boundaries.
% set bc 1

% ------- Neutron population and criticality cycles
set pop 10000 500 50
% set opti 4
set seed 7777777777

% ------- Energy Options
set gcu -1
det energyDetector de energyGrid

ene energyGrid 3 500 1e-11 2e1
ene oneGroup 1 0.0 20.0

det totalFluxSodium de oneGroup dm sodium
det macroscopicScattingSodium de oneGroup dr -3 sodium dt 3 totalFluxSodium


% ------- Unresolved Resonance
set ures 1 1

% ------- Geometry Plots
plot 33 1000 1000 2.0
plot 23 1000 1000

mesh 1 3000 3000
mesh 2 3000 3000
mesh 3 3000 3000


% ------- Material definitions
% no thermal scattering info provided in "SSS_THERMAL" for Na

% Fuel, upper boundary from active core bottom = 51.49 cm
mat fuel -11.7975 tmp 300 % rgb 0 0 0

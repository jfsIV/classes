% Sodium coolant and bond material
mat sodium -9.7E-01 tmp 300
 11023.03c 2.2272E-02

% HT-9 cladding and lower reflector
mat ht9 -7.86 tmp 300
 26000.03c 6.9715E-02
 28000.03c 4.2984E-04
 24000.03c 1.0366E-02
 25055.03c 4.5921E-04

% He in gas plenum
mat helium -1.66E-04 tmp 300
 2004.03c 1


% ------- Geometry
    % ------- Surfaces
% clad inner, outer
surf 1 cyl 0 0 0.3236
surf 2 cyl 0 0 0.38562

% hex boundary
surf 3 hexxprism 0 0 0.4483 0 332.05

% layers
surf 4 pz 125.16  % reflector top, fuel bot
surf 5 pz 210.98  % fuel top, bond Na bot
surf 6 pz 231.04  % bond Na top, He bot


    % ------- Cells
% inside the pincell
cell 1 0 ht9    -1 -3 -4
cell 2 0 fuel   -1 4 -5
cell 3 0 sodium -1 5 -6
cell 4 0 helium -1 6 -3

% cladding
cell 5 0 ht9 1 -2 -3

% coolant
cell 6 0 sodium 2 -3

% outside
cell 7 0 outside 3
